<theme>
   <formatVersion>7</formatVersion>

      <view name="system">

    <carousel name="systemcarousel">
		<type>vertical</type>
		<pos>0.015 0</pos>
		<size>1 1</size>
		<origin>0 0</origin>
		<color>00000000</color>
		<logoSize>0.163 0.163</logoSize>
		<logoAlignment>right</logoAlignment>
		<maxLogoCount>7</maxLogoCount>
		<defaultTransition>instant</defaultTransition>	
		<zIndex>50</zIndex>
	 </carousel>


      <text name="systemInfo">
        <delay>0.5</delay>
	    <glowColor>000000</glowColor>
        <pos>-0.06 0.185</pos>
        <backgroundColor>00000000</backgroundColor>
        <color>ffffff</color> 
        <fontPath>./_inc/fonts/FS_JC_bsicaunicode.ttf</fontPath>
	    <fontSize>0.050</fontSize>
           <storyboard>
        <animation property="opacity" from="0" to="1" duration="450" mode="easeIn"/>
           </storyboard>
        <zIndex>999</zIndex>
      </text> 
	  


	   <image name="wallpapers" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
	 <path>./default/_inc/wall.jpg</path>
         <path>./_inc/wallpapers/${system.theme}.jpg</path>
	     <storyboard>
         <animation property="x" from="-2" begin="0" duration="0" mode="easyOut"/>
         <animation property="scale" to="1.2" begin="350" autoreverse="true" duration="3200" repeat="forever" mode="easyIn"/>
         <animation property="opacity" from="0" to="1" duration="350" mode="linear"/>
		 </storyboard>
		 <zIndex>1</zIndex>
      </image>

	   <image name="fullglass" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/fullglass.png</path>
		 <zIndex>3</zIndex>
      </image>

 	 
	  <image name="char" extra="true">
		<pos>-0.05 0</pos>
		<maxSize>1 1</maxSize>
		<color>ffffff</color>
		<path>./default/char-d.png</path>
		<path>./${system.theme}/char.png</path>
		<zIndex>998</zIndex>
	  </image>
	  
	 	  
	       <helpsystem name="help">
	 <iconColor>FFFFFF</iconColor>
     <fontSize>0.035</fontSize>
     <origin>0.5 0.5</origin>
     <pos>0.47 0.98</pos>
     <fontPath>./_inc/FS_JC_bsicaunicode.ttf</fontPath>
     </helpsystem>


	   <image name="glasssign" extra="true">
         <origin>0 0</origin>
         <pos>0.29 0.01</pos>
         <size>0.4 0.4</size>
         <path>./_inc/chars/${system.theme}.png</path>
		 <zIndex>999</zIndex>
      </image>



	 <video name="backgroundvideo" extra="true">
        <default>./_inc/assets/noise.mp4</default>
        <visible>true</visible>
        <path>{random}</path>                
        <pos>0 0</pos>
        <origin>0 0</origin>
        <size>1 1</size>
        <delay>0.3</delay>
        <showSnapshotNoVideo>false</showSnapshotNoVideo>
        <showSnapshotDelay>false</showSnapshotDelay>
        <color>FFFFFF</color>
        <storyboard>
        <animation property="y" from="0.05" begin="0" duration="350" mode="easeOut"/>
        <animation property="opacity" from="0" to="1" duration="550" mode="easeIn"/>
        <animation property="scale" from="0" to="1" duration="350" mode="easeOut"/>
        </storyboard>
        <zIndex>2</zIndex>
     </video>

	 <video name="custombackgroundvideo" extra="true">
        <default>./_inc/assets/noise.mp4</default> 
        <rotation>-4</rotation>  
        <roundCorners>0.04</roundCorners>             
	  <path>./_inc/videos/${system.theme}.mp4</path>
        <pos>0.45 0.485</pos>
        <origin>0.5 0.5</origin>
        <size>0.4860 0.682</size>
        <delay>0.3</delay>
        <zIndex>2</zIndex>
     </video>
 
       </view>
    </theme>
